<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_list_cell_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profile_pic"
        android:src="@android:color/black"
        android:layout_width="@dimen/profile_pic_height"
        android:layout_height="@dimen/profile_pic_height"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/user_name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Camilo Vega"
        android:layout_weight="1"
        android:gravity="center_vertical" />

    <include
        android:id="@+id/following_badge"
        android:layout_width="@dimen/notification_counter_height"
        android:layout_height="@dimen/notification_counter_height"
        android:layout_margin="@dimen/activity_horizontal_margin"
        layout="@layout/badge_counter"/>

</LinearLayout>
